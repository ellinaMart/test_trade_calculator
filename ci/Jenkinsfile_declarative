pipeline {
    agent any

    stages {
        stage('test') {
            steps {
				sh """
				    #!/bin/sh
				    python3 -m venv venv
				    . venv/bin/activate
				    pip3 install -r requirements.txt
				    pytest -v tests --junitxml=report.xml
                """
            }
        }
        stage('report-xml') {
            steps {
                junit 'report.xml'
            }
        }
        stage('report-allure') {
            steps {
                script {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        properties: [],
                        reportBuildPolicy: 'ALWAYS',
                        results: [[path: 'allure-results']]
                    ])
                }
            }
        }
        stage('email') {
           steps {
                emailext body: '$DEFAULT_CONTENT',
                         subject: '$DEFAULT_SUBJECT',
                         to: 'ellina.martyn@gmail.com'
           }
        }
    }
}